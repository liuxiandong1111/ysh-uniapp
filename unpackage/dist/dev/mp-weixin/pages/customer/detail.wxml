<view class="container"><block wx:if="{{type!=='loan'}}"><view class="tabs"><block wx:for="{{detailTabs}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" data-event-params="{{({tab})}}" class="{{['tab-item',[(activeTab===tab.key)?'active':'']]}}" bindtap="__e">{{''+tab.name+''}}</view></block></view></block><view class="content" style="{{'padding-top:'+(type==='loan'?'15px':'55px')+';'}}"><block wx:if="{{activeTab==='basic'}}"><view class="tab-content"><view class="info-section"><view class="section-title">基本信息</view><view class="info-list"><view class="info-item"><text class="info-label">姓名</text><text class="info-value">{{customerInfo.name}}</text></view><block wx:if="{{type!='loan'}}"><view class="info-item"><text class="info-label">手机号</text><text class="info-value">{{customerInfo.phone}}</text></view></block><view class="info-item"><text class="info-label">年龄</text><text class="info-value">{{customerInfo.age}}</text></view><view class="info-item"><text class="info-label">婚姻状态</text><text class="info-value">{{$root.m0}}</text></view></view></view><view class="info-section"><view class="section-title">客户资料</view><view class="info-list"><view class="info-item"><text class="info-label">所属客群</text><text class="info-value">{{customerInfo.customerGroup}}</text></view><view class="info-item full-width"><text class="info-label">工作单位</text><text class="info-value">{{customerInfo.workplace}}</text></view><block wx:if="{{customerInfo.license_info}}"><view class="info-item full-width"><text class="info-label">执照信息</text><text class="info-value">{{customerInfo.license_info}}</text></view></block><block wx:if="{{customerInfo.license_img}}"><view class="info-item full-width"><text class="info-label">执照图片</text><view class="image-container"><block wx:for="{{licenseImgList}}" wx:for-item="img" wx:for-index="imgIndex" wx:key="imgIndex"><image class="license-image" src="{{img}}" data-event-opts="{{[['tap',[['previewImage',['$0'],[[['licenseImgList','',imgIndex]]]]]]]}}" bindtap="__e"></image></block></view></view></block><view class="info-item full-width"><text class="info-label">资产状况</text><text class="info-value">{{customerInfo.asset_info||'未填写'}}</text></view><view class="info-item full-width"><text class="info-label">收入描述</text><text class="info-value">{{customerInfo.income}}</text></view><view class="info-item full-width"><text class="info-label">征信描述</text><text class="info-value">{{customerInfo.credit_investigation}}</text></view><view class="info-item full-width"><text class="info-label">备注信息</text><text class="info-value">{{customerInfo.descr}}</text></view></view></view></view></block><block wx:else><block wx:if="{{activeTab==='followUp'}}"><view class="tab-content"><block wx:if="{{$root.g0===0}}"><view class="empty-tip">暂无贷款记录</view></block><block wx:else><view class="loan-list"><block wx:for="{{$root.l0}}" wx:for-item="loan" wx:for-index="loanIndex" wx:key="loanIndex"><view class="loan-item"><view class="loan-header"><text class="loan-name">{{loan.$orig.name}}</text><text class="{{['loan-status','status-'+loan.$orig.status]}}">{{loan.m1}}</text></view><view class="loan-info"><view class="loan-info-item"><text class="loan-info-label">贷款类型:</text><text class="loan-info-value">{{loan.$orig.type==1?'消费':'经营'}}</text></view><view class="loan-info-item"><text class="loan-info-label">详细进度</text><text data-event-opts="{{[['tap',[['viewProgress',['$0'],[[['loanList','',loanIndex]]]]]]]}}" class="loan-info-value" style="color:#409EFF;" bindtap="__e">查看</text></view><view class="loan-info-item"><text class="loan-info-label">期限(年):</text><text class="loan-info-value">{{loan.$orig.age_limit}}</text></view><view class="loan-info-item"><text class="loan-info-label">还款方式:</text><text class="loan-info-value">{{loan.$orig.due_type==1?'等额本息':loan.$orig.due_type==2?'先息后本':loan.$orig.due_type==3?'随借随还':''}}</text></view><view class="loan-info-item"><text class="loan-info-label">放款时间:</text><text class="loan-info-value">{{loan.$orig.loan_date||''}}</text></view><view class="loan-info-item"><text class="loan-info-label">额度:</text><text class="loan-info-value">{{loan.$orig.quota}}</text></view><view class="loan-info-item"><text class="loan-info-label">利率:</text><text class="loan-info-value">{{loan.$orig.rate}}</text></view><block wx:if="{{loan.$orig.status==2}}"><view class="loan-info-item"><text class="loan-info-label">还款状态:</text><text class="{{['loan-info-value','repay-'+loan.$orig.is_yu]}}">{{loan.m2}}</text></view></block><block wx:if="{{loan.$orig.rejectReason}}"><view class="loan-info-item"><text class="loan-info-label">拒绝原因:</text><text class="loan-info-value">{{loan.$orig.rejectReason}}</text></view></block></view><view class="loan-action"><button data-event-opts="{{[['tap',[['viewLoanDetail',['$0'],[[['loanList','',loanIndex]]]]]]]}}" class="loan-detail-btn" bindtap="__e">详情</button></view></view></block></view></block></view></block></block></view></view>