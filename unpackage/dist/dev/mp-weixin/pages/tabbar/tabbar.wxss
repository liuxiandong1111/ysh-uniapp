
.tabbar-container {
	display: flex;
	flex-direction: column;
	height: 100vh;
}
.page-content {
	flex: 1;
	overflow: auto;
	-webkit-overflow-scrolling: touch;
	padding-bottom: 50px; /* 底部留出自定义tabbar的高度 */
	display: flex;
	justify-content: center;
	align-items: center;
}
.welcome-content {
	text-align: center;
	padding: 30px;
}
.welcome-logo {
	width: 80px;
	height: 80px;
	line-height: 80px;
	border-radius: 20px;
	background-color: #409EFF;
	color: #FFFFFF;
	font-size: 28px;
	font-weight: bold;
	margin: 0 auto 20px;
}
.welcome-title {
	font-size: 20px;
	font-weight: bold;
	color: #303133;
	margin-bottom: 10px;
}
.welcome-subtitle {
	font-size: 14px;
	color: #909399;
}

