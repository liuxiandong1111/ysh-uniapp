<view class="container"><view class="form-card"><view class="form-title">更新贷款进度</view><view class="form-group"><view class="form-label">审批状态</view><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="status-picker" bindtap="__e"><text class="picker-value">{{updateStatusForm.status||'请选择贷款进度'}}</text><text class="picker-arrow">▼</text></view></view><block wx:if="{{updateStatusForm.status==='拒绝'}}"><view class="form-group"><view class="form-label">拒绝原因</view><input class="form-input" type="text" placeholder="请输入拒绝原因" data-event-opts="{{[['input',[['__set_model',['$0','rejectReason','$event',[]],['updateStatusForm']]]]]}}" value="{{updateStatusForm.rejectReason}}" bindinput="__e"/></view></block><block wx:if="{{updateStatusForm.status==='放款'}}"><view class="form-group"><view class="form-label">放款时间</view><picker class="date-input" mode="date" value="{{updateStatusForm.disbursementDate}}" data-event-opts="{{[['change',[['onDateChange',['$event']]]]]}}" bindchange="__e"><view class="date-display"><text class="picker-value">{{updateStatusForm.disbursementDate||'请选择放款时间'}}</text><text class="picker-arrow">▼</text></view></picker></view></block><view class="form-buttons"><button data-event-opts="{{[['tap',[['cancel',['$event']]]]]}}" class="btn-cancel" bindtap="__e">取消</button><button data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="btn-submit" bindtap="__e">提交</button></view></view><block wx:if="{{showStatusPicker}}"><view data-event-opts="{{[['tap',[['e1',['$event']]]]]}}" class="mask" bindtap="__e"><view data-event-opts="{{[['tap',[['',['$event']]]]]}}" class="picker-panel" catchtap="__e"><view class="picker-header"><text class="picker-title">选择贷款进度</text><text data-event-opts="{{[['tap',[['e2',['$event']]]]]}}" class="picker-close" bindtap="__e">×</text></view><view class="picker-options"><block wx:for="{{statusOptions}}" wx:for-item="option" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['selectStatus',['$0'],[[['statusOptions','',index]]]]]]]}}" class="picker-option" bindtap="__e"><text class="{{['option-text',(updateStatusForm.status===option)?'active':'']}}">{{option}}</text></view></block></view></view></view></block></view>